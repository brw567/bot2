# Never commit .env to version control - add to .gitignore

# Binance API credentials (required for trading)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Coinbase API credentials (optional for multi-exchange)
#COINBASE_API_KEY=your_coinbase_api_key_here
#COINBASE_API_SECRET=your_coinbase_api_secret_here

# Kraken API credentials (optional for multi-exchange)
#KRAKEN_API_KEY=your_kraken_api_key_here
#KRAKEN_API_SECRET=your_kraken_api_secret_here

# Telegram bot credentials (required for notifications and commands)
#TELEGRAM_TOKEN=your_telegram_bot_token_here
#TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# User Telegram API credentials for Telethon (must be your user, NOT bot)
TELEGRAM_TOKEN=your_token
TELEGRAM_API_ID=your_id
TELEGRAM_API_HASH=your_hash
TELEGRAM_SESSION=your_session_string

# Grok (xAI) API key (required for AI tuning and analysis)
GROK_API_KEY=your_grok_api_key_here
GROK_TIMEOUT=10

# Cold wallet addresses for automatic withdrawals (optional, but recommended for security)
#COLD_WALLET_1=your_first_cold_wallet_address_here
#COLD_WALLET_2=your_second_cold_wallet_address_here

# Ethereum RPC URL for on-chain/DeFi queries (required for Web3 interactions; free from Infura/Alchemy)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_key_here

# Dune API key for on-chain RPL metrics (free signup at dune.com)
DUNE_API_KEY=your_dune_api_key_here
DUNE_QUERY_ID=your_dune_query_id

# Paper trading mode (set to True for simulation without real funds)
PAPER_TRADING=False

# Initial max drawdown percent (overridden by DB after startup)
MAX_DRAWDOWN_PERCENT=10.0

# Redis DB
REDIS_HOST=localhost
REDIS_PORT=6379
